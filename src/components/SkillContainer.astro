---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<div class="my-1 flex flex-row items-center">
    <p
        class="mr-2 flex w-48 flex-row items-center justify-center rounded-md border-2 border-neutral-800 bg-neutral-900 px-3 py-5 text-lg font-medium"
    >
        {title}
    </p>
    <section class="flex h-full w-full flex-row flex-wrap gap-2 rounded-md bg-neutral-800 p-3">
        <slot />
    </section>
</div>
